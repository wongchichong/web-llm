{
  "compilerOptions": {
    "target": "es6",
    "declaration": true,
    "outDir": "lib",
    "declarationMap": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "strict": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "lib": ["es2022", "dom", "WebWorker"]
  },
  "typeRoots": ["./node_modules/@webgpu/types", "./node_modules/@types"],
  "include": ["src"],
  "exclude": ["node_modules", "build", "dist", "rollup.config.cjs"]
}
